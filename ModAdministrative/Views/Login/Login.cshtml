@model ModAdministrative.Models.tbuser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <form role="form">
        <fieldset>
            <div class="form-group">
                <div>
                    @Html.EditorFor(Model => Model.nametbuser, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuario", @name = "nametbuser", @type = "text"} })
                    @Html.ValidationMessageFor(Model => Model.nametbuser, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.EditorFor(Model => Model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña", @name = "password", @type = "password"} })
                    @Html.ValidationMessageFor(Model => Model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    @*@Html.ValidationMessageFor(Model => Model.loginErrorMessage, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <center><button class="btn btn-primary" type="submit">Ingresar</button></center>
        </fieldset>
    </form>
}
