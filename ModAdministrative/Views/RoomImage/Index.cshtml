@model IEnumerable<ModAdministrative.Models.tbimageroom>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

    if (Session["nametbuser"] == null)
    {
        Response.Redirect("~/Login/Login");
    }

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.imageroompath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbroom.nameroom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.imageroompath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbroom.nameroom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idtbimageroom }) |
            @Html.ActionLink("Details", "Details", new { id=item.idtbimageroom }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idtbimageroom })
        </td>
    </tr>
}

</table>
