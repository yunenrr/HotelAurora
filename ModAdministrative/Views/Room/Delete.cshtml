@model ModAdministrative.Models.tbroom

@{
    ViewBag.Title = "Eliminar habitación";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

    if (Session["nametbuser"] == null)
    {
        Response.Redirect("~/Login/Login");
    }
}

<h2>Eliminar habitación</h2>

<h3>¿Está seguro de que la desea eliminar?</h3>
<div>
    <h4>Información</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Habitación:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nameroom)
        </dd>

        <dt>
            Características:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.characteristics)
        </dd>

        <dt>
            Disponibilidad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.availability)
        </dd>

        <dt>
            Tipo habitación:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tbroomtype.roomtype)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a la lista de habitaciones", "Index")
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready
    (
        function ()
        {
            $("#liRoom").addClass("active");
        }//Fin de la función
    );
</script>