@model ModAdministrative.Models.tbroom

@{
    ViewBag.Title = "Agregar habitación";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

    if (Session["nametbuser"] == null)
    {
        Response.Redirect("~/Login/Login");
    }
}

<h2>Agregar habitación</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Información</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Habitación:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nameroom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nameroom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Características:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.characteristics, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.characteristics, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Disponibilidad:</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.availability)
                    @Html.ValidationMessageFor(model => model.availability, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tipo habitación:</label>
            <div class="col-md-10">
                @Html.DropDownList("typeroom", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.typeroom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista de habitaciones", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready
    (
        function ()
        {
            $("#liRoom").addClass("active");
        }//Fin de la función
    );
</script>