@model IEnumerable<ModAdministrative.Models.tbadvertising>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

    if (Session["nametbuser"] == null)
    {
        Response.Redirect("~/Login/Login");
    }

}

h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idtbadvertising)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.urladvertising)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageadvertisingpath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idtbadvertising)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urladvertising)
            </td>
            <td>
                <img width="140" height="140" src="@Html.DisplayFor(modelItem => item.imageadvertisingpath)" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idtbadvertising }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idtbadvertising })
            </td>
        </tr>
    }

</table>