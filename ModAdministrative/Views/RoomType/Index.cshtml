@model IEnumerable<ModAdministrative.Models.tbroomtype>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

    if (Session["nametbuser"] == null)
    {
        Response.Redirect("~/Login/Login");
    }

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.roomtype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descriptionroom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantitypersons)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagepathroomtype)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.roomtype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descriptionroom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantitypersons)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            <img width="140" height="140" src="@Html.DisplayFor(modelItem => item.imagepathroomtype)" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idtbroomtype }) |
            @Html.ActionLink("Details", "Details", new { id=item.idtbroomtype }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idtbroomtype })
        </td>
    </tr>
}

</table>
