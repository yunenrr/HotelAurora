@model ModAdministrative.Models.tbuser

@{
    ViewBag.Title = "Eliminar usuario";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Eiminar usuario</h2>

<h3>¿Está seguro de que lo desea eliminar?</h3>
<div>
    <h4>Información:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Usuario:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nametbuser)
        </dd>

        <dt>
            Contraseña:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            Role:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tbrole.namerole)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready
    (
        function ()
        {
            $("#liUser").addClass("active");
        }//Fin de la función
    );
</script>