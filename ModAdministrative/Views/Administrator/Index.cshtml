@model ModAdministrative.Models.tbuseradmin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    

}

     @using (Html.BeginForm("Registrar", "Administrator", FormMethod.Post))
     {
         
        <form role="form">
            <fieldset>
                <div class="form-group">
                    <div>
                        @Html.EditorFor(Model => Model.nameuseradmin, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre", @name = "name", @type = "text", @autofocus = "" } })
                        @Html.ValidationMessageFor(Model => Model.nameuseradmin, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        @Html.EditorFor(Model => Model.emailuseradmin, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @name = "email", @type = "email", @autofocus = "" } })
                        @Html.ValidationMessageFor(Model => Model.emailuseradmin, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        @Html.EditorFor(Model => Model.passworduseradmin, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña", @name = "password", @type = "password", @value = "" } })
                        @Html.ValidationMessageFor(Model => Model.passworduseradmin, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        @Html.ValidationMessageFor(Model => Model.loginErrorMessage, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="checkbox">
                    <label><input name="remember" type="checkbox" value="Remember Me">Recordar mi cuenta</label>
                </div>

                <center><a href="index.html" class="btn btn-primary" name="Login" value="Login">iniciar sesión</a></center>
                
            </fieldset>
        </form>
       



